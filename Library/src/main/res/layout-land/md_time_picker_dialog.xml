<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <it.andreale.mdatepicker.time.TimeHeaderView
        android:id="@+id/time_header_view"
        android:layout_width="@dimen/time_header_max_width"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <it.andreale.mdatepicker.time.RadialSelectorView
            android:id="@+id/time_selector_view"
            android:layout_width="@dimen/time_picker_body_width"
            android:layout_height="@dimen/time_picker_body_height"
            android:padding="8dp" />

        <include layout="@layout/md_bottom_bar" />

    </LinearLayout>

</LinearLayout>